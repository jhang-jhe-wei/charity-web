<div class="container py-8 mx-auto">
  <h1 class="mb-4 text-3xl font-bold">Charitable Events</h1>

  <!-- Search Form -->
  <form action="/charitable_events" method="get" class="mb-4">
    <div class="flex space-x-4">
      <div class="w-1/3">
        <label for="city" class="block text-sm font-medium text-gray-700">City:</label>
        <select id="city" name="city" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
          <option value="">All</option>
          <!-- Add options for cities -->
          <option value="Taipei">Taipei</option>
          <option value="New York">New York</option>
          <!-- Add more options as needed -->
        </select>
      </div>
      <div class="w-1/3">
        <label for="started_at" class="block text-sm font-medium text-gray-700">Start Date:</label>
        <input type="datetime-local" id="started_at" name="started_at" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>
      <div class="w-1/3">
        <label for="ended_at" class="block text-sm font-medium text-gray-700">End Date:</label>
        <input type="datetime-local" id="ended_at" name="ended_at" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
      </div>
    </div>
    <button type="submit" class="px-4 py-2 mt-4 font-medium text-white bg-indigo-500 hover:bg-indigo-600 rounded-md">Search</button>
  </form>

  <!-- Event Cards -->
  <div class="grid grid-cols-3 gap-4">
    <% @charitable_events.each do |event| %>
      <div class="p-4 bg-white rounded-lg shadow-md">
        <img src="<%= event.img_url %>" alt="Event Image" class="object-cover w-full h-48 mb-4">
        <h2 class="mb-2 text-xl font-bold"><%= event.name %></h2>
        <p class="text-gray-600"><%= event.location %></p>
        <p class="text-gray-600">活動開始：<%= event.started_at&.strftime("%Y-%m-%d %H:%M") %></p>
        <p class="text-gray-600">活動結束：<%= event.ended_at&.strftime("%Y-%m-%d %H:%M") %></p>
        <p class="text-gray-600">報名截止：<%= event.registration_deadline&.strftime("%Y-%m-%d %H:%M") %></p>
        <div class="flex justify-between mt-4">
          <a href="<%= event.link %>" class="text-indigo-500 hover:text-indigo-600">Visit Website</a>
          <button class="text-indigo-500 hover:text-indigo-600" onclick="addToFavorites(<%= event.id %>)">Add to Favorites</button>
        </div>
      </div>
    <% end %>
  </div>

